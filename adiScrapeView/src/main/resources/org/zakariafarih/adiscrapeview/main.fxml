<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.zakariafarih.adiscrapeview.controller.MainController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <GridPane fx:id="productGrid" style="-fx-padding: 10px; -fx-hgap: 10px; -fx-vgap: 10px;">
                <!-- Product items will be added here dynamically -->
            </GridPane>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <Button text="Previous" onAction="#handlePreviousPage" />
            <Button text="Next" onAction="#handleNextPage" />
        </HBox>
    </bottom>
</BorderPane>
