<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.zakariafarih.adiscrapeview.controller.ProductItemController" style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10px;">
    <ImageView fx:id="productImage" fitWidth="150" fitHeight="150" style="-fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" />
    <Label fx:id="productTitle" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 5px 0 5px 0;" wrapText="true" />
    <Label fx:id="productPrice" style="-fx-text-fill: green; -fx-font-size: 12px;" />
    <HBox spacing="5" alignment="CENTER" style="-fx-padding: 5px 0 0 0;">
        <Button text="Edit" onAction="#handleEdit" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
    </HBox>
</VBox>
